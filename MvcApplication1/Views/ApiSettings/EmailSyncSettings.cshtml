@using MvcApplication1.Models
@model ApiSettings_EmailSync
@{
    ViewBag.Title = "EmailSyncSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript" src="jquery-min.js"></script>
<script type="text/javascript" src="crosscut.js"></script>
<script src="jquery-ui.min.js" type="text/javascript"></script>
<script type="text/javascript" src="mod-min.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<!-- Horizontal Form -->
<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Email API Sync Settings</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (@Html.BeginForm("SaveEmailSyncSettings", "ApiSettings", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="box-body">
            <div class="form-group">
                <label for="inputEmail3" class="col-xs-3 control-label">Sync Emails</label>
                <div class="col-xs-4">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.SyncOn)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-xs-3 control-label">Sync Hour</label>
                <div class="col-xs-2">
                    @Html.DropDownListFor(m => m.SyncHour, new SelectList(Model.AllItems, "Value", "Text", Model.SyncHour - 1), new { @class = "form-control" })
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" value="Submit" class="btn btn-default">Save</button>
        </div>
    }
    <!-- /.box-footer -->
</div>


@Scripts.Render("~/bundles/jqueryval")

@section Scripts
{
    <script type="text/javascript">
        $('.actionConfirmation').on('click',
            function() {
                return confirm('Are you sure you wish to proceed with this action?');
            });
    </script>
}




