@using MvcApplication1.Models

@{
    ViewBag.Title = "TrialBalance";
}

<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<!-- Horizontal Form -->
<div class="box box-info form-horizontal">
    <div class="box-header with-border">
        <h3 class="box-title">Trial Balance</h3>
    </div>

    <div class="box box-warning">
        <div class="box-header with-border">
            <!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">
                <div class="form-group">
                    <label for="year" class="col-xs-1 control-label">Plant</label>
                    <div class="col-xs-3">
                        <select id="plant" class="form-control">
                            @if (Permissions.HasAccess(HttpContext.Current.Session["Department"].ToString(), "Manager", true, null, new List<string> { "lsilva" }))
                            {
                                <option selected>Markham</option>
                                <option>Michigan</option>
                                <option>Texas</option>
                            }
                            <option>Colombia</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="year" class="col-xs-1 control-label">Year</label>
                    <div class="col-xs-2">
                        <select id="year" class="form-control">
                            <option>2016</option>
                            <option>2017</option>
                            <option selected>2018</option>
                            <option>2019</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="period" class="col-xs-1 control-label">Period</label>
                    <div class="col-xs-2">
                        <select id="period" class="form-control">
                            <option>01</option>
                            <option>02</option>
                            <option>03</option>
                            <option>04</option>
                            <option>05</option>
                            <option>06</option>
                            <option>07</option>
                            <option>08</option>
                            <option>09</option>
                            <option>10</option>
                            <option>11</option>
                            <option>12</option>
                        </select>
                    </div>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button id="generateTrialBalance" class="btn btn-default">Generate</button>
            </div>
            <!-- /.box-footer -->
        </div>
    </div>
</div>

<div class="modalloading"><!-- Place at bottom of page --></div>

@section Scripts
{
    <script type="text/javascript">

        $body = $("body");

        $(document).on({
            ajaxStart: function () { $body.addClass("loading"); },
            ajaxStop: function () { $body.removeClass("loading"); }

        });

        $(document).on('click',
            '#generateTrialBalance',
            function () {

                jQuery.event.trigger("ajaxStart");

                //var plant = document.getElementById("plant");
                var plant = document.getElementById("plant");
                var year = document.getElementById("year");
                var period = document.getElementById("period");
                var queryStr = (plant.options[plant.selectedIndex].value + ',' +
                    year.options[year.selectedIndex].value + ',' +
                    period.options[period.selectedIndex].value);
                generateIS(queryStr);
                //var url = 'Url.Action("GenerateIncomeStatement", "Financials", new {id = "__param__"})';
                //window.location.href = url.replace('__param__', encodeURIComponent(queryStr));
            });

        function generateIS(idx) {
            return $.ajax({
                type: "GET",
                url: "/Financials/GenerateTrialBalance/" + idx,
                contentType: "application/json; charset=utf-8",
                dataType: "text",
                success: function () {
                    var param = idx;
                    var url = '@Url.Action("GenerateTrialBalance", "Financials", new { parameterStr = "__param__"})';
                    window.location.href = url.replace('__param__', encodeURIComponent(param));
                    jQuery.event.trigger("ajaxStop");
                },
                fail: function () {
                    jQuery.event.trigger("ajaxStop");
                },
                error: function () {
                    jQuery.event.trigger("ajaxStop");
                }
            });
        }
    </script>
}